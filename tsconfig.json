{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "lib": ["ES2017", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": ["./src", "./tests"]
}
