{
  "name": "tririga-js-sdk",
  "version": "0.0.6",
  "type": "module",
  "description": "Lightweight TRIRIGA Javascript Client SDK",
  "author": "Amir Karbasi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/karbasia/tririga-js-sdk.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && tsc-alias && npx fix-esm-import-path dist",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "dev": "npm run type-check && npm run format:check && npm run test",
    "prepublishOnly": "npm run dev && npm run build"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "fix-esm-import-path": "^1.10.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typedoc": "^0.27.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "tririga",
    "tririga-ux",
    "tririga-js",
    "tririga-client",
    "tririga-sdk"
  ]
}
